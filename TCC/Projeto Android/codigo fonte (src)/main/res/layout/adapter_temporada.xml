<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_temporada"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temporada"
        android:id="@+id/txt_numero_temporada"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_temporada"
        android:layout_toEndOf="@+id/img_temporada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_info_temporada"
        android:layout_below="@+id/txt_numero_temporada"
        android:layout_toRightOf="@+id/img_temporada"
        android:layout_toEndOf="@+id/img_temporada" />

</RelativeLayout>